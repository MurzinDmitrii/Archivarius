<Page x:Class="Archivarius.Pages.AllCasePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Archivarius.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AllCasePage">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Background="#E8F1F5">
            <ListView x:Name="CaseListView" Width="570" Height="400" 
                      ScrollViewer.CanContentScroll="False" Margin="5" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5" Width="540" Background="White">
                            <TextBlock Text="{Binding ActFullNumber}" Margin="5"/>
                            <TextBlock Text="{Binding Description}" Margin="5"/>
                            <TextBlock Text="{Binding JudgeFullInfo}" Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
